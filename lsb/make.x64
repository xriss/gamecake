cd `dirname $0`

#hack until we can install 32 bit and 64 bit devs at same time
sudo apt-get install libgl1-mesa-dev libx11-dev libasound2-dev libssl-dev


cpu=64

cd ..

makeopts="config=release_lsb"
if [ "$1" = "debug" ] ; then
makeopts="config=debug_lsb"
fi


if [ "$1" = "clean" ] ; then

        rm -rf build-gmake-lsb-$cpu
        exit
fi

build/premake4 gmake lsb-$cpu
cd build-gmake-lsb-$cpu
make $makeopts $2 $3 $4
cd ..
