export LSBCC_LSBVERSION=5.0

cd `dirname $0`

cpu=32

#switch to 64bit build?
test=`getconf LONG_BIT`
if [ "$test" = "64" ] ; then
	cpu=64
fi

cd ..

makeopts="config=release_lsb"
if [ "$1" = "debug" ] ; then
makeopts="config=debug_lsb"
fi


if [ "$1" = "clean" ] ; then

        rm -rf build-gmake-lsb-$cpu
        exit
fi

build/premake4 gmake lsb-$cpu
cd build-gmake-lsb-$cpu
make $makeopts $2 $3 $4
cd ..
