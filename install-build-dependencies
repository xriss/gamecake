
# first install a require script
if ! [[ -x "$(command -v require)" ]] ; then

	echo " we need sudo to install require.sh to /usr/local/bin "
	sudo wget -O /usr/local/bin/require https://raw.githubusercontent.com/xriss/require.sh/main/require.sh
	sudo chmod +x /usr/local/bin/require

fi

# commands

require gcc
require make
require luajit

# libs

require lfs.so

# devs

require /usr/include/readline/readline.h
require /usr/include/GL/gl.h
require /usr/include/X11/X.h
require /usr/include/alsa/asoundlib.h
require /usr/include/libudev.h
require /usr/include/pulse/pulseaudio.h
require /usr/include/luajit-2.0/lua.h
require /usr/include/luajit-2.1/lua.h
require /usr/include/SDL2/SDL.h
require /usr/include/openssl/ssl.h




if [ "$1" = "--extra" ]; then

# commands

	require upx
	require clang
	require i686-w64-mingw32-gcc

#vagrant and virtualbox for building in controlled environments

	require vagrant

# these are not commands ...
	
	require virtualbox
	require virtualbox-ext-pack

else

	echo ""
	echo " installed base dependencies only "
	echo ""
	echo " Run with --extra, eg ./install-build-dependencies --extra to install extra dependencies "
	echo ""

fi

