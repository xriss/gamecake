cd `dirname $0`

#switch to 64bit build?
test=`getconf LONG_BIT`
if [ "$test" = "64" ] ; then
	./make.x64 $*
	exit
fi

cd ..

cpu=32
makeopts=""
if [ "$1" = "release" ] ; then
makeopts="config=release_clang"
fi


build/premake4 gmake clang-$cpu

if [ "$1" = "clean" ] ; then

        rm -rf build-gmake-clang-$cpu
        exit
fi


cd build-gmake-clang-$cpu
make $makeopts $2 $3 $4
cd ..

