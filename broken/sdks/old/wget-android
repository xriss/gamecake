rm -rf android-sdk
wget http://dl.google.com/android/android-sdk_r15-linux.tgz
tar xvzf android-sdk_r15-linux.tgz
mv android-sdk-linux android-sdk
rm android-sdk_r15-linux.tgz

rm -Rf android-ndk
wget http://dl.google.com/android/ndk/android-ndk-r7b-linux-x86.tar.bz2
tar xvjf android-ndk-r7b-linux-x86.tar.bz2
mv android-ndk-r7b android-ndk
rm android-ndk-r7b-linux-x86.tar.bz2

./android-create
