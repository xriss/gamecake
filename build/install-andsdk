wget https://dl.google.com/android/repository/commandlinetools-linux-7583922_latest.zip -O andsdk.zip
unzip andsdk.zip
rm andsdk.zip


rm -rf andsdk
mkdir andsdk
echo -e "Y\nY\nY\nY\nY\nY\nY\nY\nY" | cmdline-tools/bin/sdkmanager --sdk_root=/home/vagrant/andsdk --licenses
cmdline-tools/bin/sdkmanager --sdk_root=/home/vagrant/andsdk --install "cmdline-tools;latest"
rm -rf cmdline-tools


andsdk/cmdline-tools/latest/bin/sdkmanager --install "ndk-bundle"
andsdk/cmdline-tools/latest/bin/sdkmanager --install "platforms;android-23"

