#fi

cd ..

mode=osx
cpu=32
makeopts="config=release_clang"
if [ "$1" = "debug" ] ; then
makeopts="config=debug_clang"
fi


if [ "$1" = "clean" ] ; then

        rm -rf build-gmake-$mode-$cpu
        exit
fi



build/premake4.osx gmake $mode-$cpu
cd build-gmake-$mode-$cpu
make $makeopts $2 $3 $4
cd ..

