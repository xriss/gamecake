cd `dirname $0`


./box-up-wait

if [ "$1" ==  "--clean" ] ;  then
 ./ssh " rm -rf gamecake "
fi

./ssh " cd gamecake && git pull && cd .. || git clone --recursive -v --progress https://github.com/xriss/gamecake.git "

./ssh " cd gamecake ; build/make $* "

scp -P 5522 pi@localhost:gamecake/exe/gamecake.nix ../exe/gamecake.arm

./box-down

