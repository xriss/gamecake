BEGIN_CASE
x509parse_keyfile:key_file:password:result
{
    rsa_context rsa;
    int res;

    memset( &rsa, 0, sizeof( rsa_context ) );

    res = x509parse_keyfile( &rsa, {key_file}, {password} );

    TEST_ASSERT( res == {result} );

    if( res == 0 )
    {
        TEST_ASSERT( rsa_check_privkey( &rsa ) == 0 );
    }

    rsa_free( &rsa );
}
